{
    "mqtt": {
        "broker": "agb-mokipro-db.one.fc.eah-jena.de",  // MQTT broker address
        "port": 1883,  // MQTT broker port (default for unencrypted MQTT)
        "topic": "sensordaten",  // MQTT topic to publish sensor data to
        "client_id": "mqtt_client"  // MQTT client ID (used to identify the client to the broker)
    },
    "intervals": {
        "mqtt_publish_interval": 3,  // Time interval in seconds between each data publish
        "sleep_interval": 3  // Sleep interval in seconds between sensor reads
    },
    "sensors": {
        "ds1820_base_dir": "/sys/bus/w1/devices/",  // Base directory for DS1820 sensor files
        "sht31_address": "0x44",  // I2C address of the SHT31 sensor (in hexadecimal)
        "bus": "1"  // I2C bus number used for the SHT31 sensor
    }
}
